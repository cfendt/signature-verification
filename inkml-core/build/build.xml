<project name="InkMLLibj" default="build" basedir="."> 
   <!-- set properties for this build -->    
   <property name="src" value="../src"/>
   <property name="classes" value="classes"/>
   <property name="dist" value="dist"/>
   <property name="bin" value="../bin"/>
   

   <target name="prepare">
     <mkdir dir="${classes}"/>
   </target>
   
   <target name="build" depends="prepare" >
     <javac srcdir="${src}" destdir="${classes}"/>          
   </target>
   
   <target name="javadoc">
      	<javadoc packagenames="com.hp.hpl.inkml"
      	           sourcepath="${src}"
      	           destdir="../javadocs/"
      	           author="true"
      	           version="true"
      	           use="true"
      	           windowtitle="InkML Processor Library API">
      	    <doctitle><![CDATA[<h1>InkML Processor Library</h1>]]></doctitle>
      	    <bottom><![CDATA[<i>Copyright &#169; 2008 Hewlett-Packard Development Company, L.P. <br> License: <a href="http://www.opensource.org/licenses/mit-license.php"> MIT</a>.</i>]]></bottom>   	    
      	  </javadoc>	
   </target>
   
   <target name="dist" depends="build, javadoc">
     <mkdir dir="${dist}"/>      
     <jar jarfile="${dist}/inkmllibj.jar" basedir="${classes}" />
     <copy file="${dist}/inkmllibj.jar" todir="${bin}"/>    
   </target>
   
   <target name="clean" > 
     <delete dir="${classes}"/> 
     <delete dir="${dist}"/> 
   </target> 
</project>
